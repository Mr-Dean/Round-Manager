<% layout('layouts/boilerplate') -%>

<h1 class="text-center mb-5">Create Round</h1>

<form class="align-items-center offset-3 mb-5" action="/rounds/new" method="GET">
    <div class="row">
        <div class="col">
            <input class="form-control" type="number" placeholder="Enter round number" name="number">
        </div>
        <div class="col">
            <input class="form-control" type="text" placeholder="Enter operative" name="employee">
        </div>
        <div class="col">
            <button class="btn btn-secondary">Search</button>
        </div>
      </div> 
</form>


<form action="/rounds" method="POST">
    <% for (let person of operative) {%>
        <h2><label for="operative"><input type="text" id="operative" name="round[operative]" value="<%= operative[0].name %>" readonly></label></h2>
    <% } %>
    <table class="table">
        <thead>
        <tr>
        <th>id</th>
        <th>Round No.</th>
        <th>Ref.</th>
        <th>Name</th>
        <th>Address</th>
        <th>Details</th>
        <th>Freq.</th>
        <th>Ext</th>
        <th>Int</th>
        <th>Acc/Manager</th>

        </tr>
        </thead>
        <% for (let job of round) { %> 
        <tr>
            <td>
                <label class="form-label" for="_id"><input class="form-control d-inline" type="text" id="_id" name="<%=`round[_id]`%>" value="<%=job._id%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="roundNumber"><input class="form-control d-inline" type="text" id="roundNumber" name="<%=`round[roundNumber]`%>" value="<%=job.roundNumber%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="ref"><input class="form-control d-inline" type="text" id="ref" name="<%=`round[ref]`%>" value="<%=job.ref%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="name"><input class="form-control" type="text" id="name" name="round[name]" value="<%=job.name%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="address"><input class="form-control" type="text" id="address" name="round[address]" value="<%=job.address%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="details"><input class="form-control"type="text" id="details" name="round[details]" value="<%=job.details%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="freq"><input class="form-control" type="text" id="freq" name="round[freq]" value="<%=job.freq%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="exterior"><input class="form-control" type="number" id="exterior" name="round[exterior]" value="<%=job.exterior%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="interior"><input class="form-control" type="number" id="interior" name="round[interior]" value="<%=job.interior%>" readonly></label>
            </td>
            <td>
                <label class="form-label" for="accManager"><input class="form-control d-inline" type="text" id="accManager" name="round[accManager]" value="<%=job.accManager%>" readonly></label>
            </td>
            <td>
                <a class="btn btn-dark" href="/jobs/<%= job._id %> ">View</a>
            </td>
        </tr>
        <% } %>

    </table>
    <button class="btn btn-primary" id="create-round">Create Round</button>
 </form>





