<% layout('layouts/boilerplate') -%>

<h1>Round</h1>

<form action="/rounds/new" method="GET">
    <input type="number" placeholder="round" name="number">
    <input type="text" placeholder="employee" name="employee">
    <button>search</button>
</form>

<% for (let person of operative) {%>
<h2><%= operative[0].name %></h2>
<% } %>
    





<table class="table">
    <thead>
    <tr>
        <th>Round</th>
        <th>Ref.</th>
        <th>Name</th>
        <th>Address</th>
        <th>Details</th>
        <th>Freq.</th>
        <th>Ext</th>
        <th>Int</th>
        <th>Acc/Manager</th>

    </tr>
</thead>
    <% for (let job of round) { %>
        <tr>
            <td>
                <%= job.roundNumber %>
            </td>
            <td>
                <%= job.ref %>
            </td>
            <td>
                <%= job.name %>
            </td>
            <td>
                <%= job.address %>
            </td>
            <td>
                <%= job.details %>
            </td>
            <td>
                <%= job.freq %>
            </td>
            <td>
                <%= job.exterior %>
            </td>
            <td>
                <%= job.interior %>
            </td>
            <td>
                <%= job.accManager %>
            </td>
            <td>
                <a class="btn btn-dark" href="/jobs/<%= job._id %> ">View</a>
            </td>
        </tr>
        <% } %>

</table>
</div>

