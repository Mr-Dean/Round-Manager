<% layout('layouts/boilerplate') -%>
    <h1>Add Job</h1>
    <form action="/jobs" method="POST">
        <div>
            <label for="accManager">Acc/Manager</label>
            <input type="text" id="accManager" name="job[accManager]">
            <label for="ref">Ref:</label>
            <input type="text" id="ref" name="job[ref]">
        </div>
        <div>
            <label for="name">Client Name:</label>
            <input type="text" id="name" name="job[name]">
            <label for="address">Address:</label>
            <input type="text" id="address" name="job[address]">
        </div>
        <div>
            <label for="details">Details:</label>
            <input type="text" id="details" name="job[details]">
            <label for="freq">Frequency:</label>
            <input type="text" id="freq" name="job[freq]">
        </div>
        <div>
            <label for="exterior">No. Exterior:</label>
            <input type="number" id="exterior" name="job[exterior]">
            <label for="interior">No. Interior:</label>
            <input type="number" id="interior" name="job[interior]">
        </div>
        <button>Save</button>
    </form>
    <a href="/jobs">Back</a>
