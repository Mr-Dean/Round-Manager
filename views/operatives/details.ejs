<% layout('layouts/boilerplate') -%>
<div class="d-flex justify-content-between mb-5">
    <h1><%= operative.name %></h1>
    <a class="btn btn-secondary d-flex align-items-center" href="/operatives">Back</a>
</div>
<div class="table-responsive col-6 offset-3">
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Number</th>
        </tr>
    </thead>
        <tr>
            <td>
                <%= operative.name %>
            </td>
            <td>
                <%= operative.number %>
            </td>
            <td>
                <a class="btn btn-primary d-inline"href="/operatives/<%= operative._id %>/edit">Edit</a>
                <form class="d-inline" action="/operatives/<%=operative._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger btn-sm">Delete</button>
                </form>

                
            </td>
        </tr>

    </table>
</div>
</div>